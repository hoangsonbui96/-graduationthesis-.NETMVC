@model IEnumerable<MyStore.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BonusPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quanlity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPhone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BonusPercentage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BonusPoint)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quanlity)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.CustomerPhone)
            </th>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OrderId, productid = item.ProductId }) |
                @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
            </td>
        </tr>
}
    </tbody>
</table>
